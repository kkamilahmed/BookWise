<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookstore.ownerController">
   <children>
      <!-- Title -->
      <Text layoutX="180.0" layoutY="57.0" styleClass="title-text" text="Books Available">
         <font>
            <Font name="System Bold" size="32.0" />
         </font>
      </Text>

      <!-- Table -->
      <TableView fx:id="bookTable" editable="true" layoutX="91.0" layoutY="98.0" prefHeight="150.0" prefWidth="425.0" styleClass="table-view">
         <columns>
            <TableColumn fx:id="bookTitle" prefWidth="150.0" text="Title" />
            <TableColumn fx:id="bookPrice" prefWidth="150.0" text="Price" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>

      <!-- Text Fields -->
      <TextField fx:id="titleInput" layoutX="98.0" layoutY="266.0" promptText="Title" styleClass="input-field" />
      <TextField fx:id="priceInput" layoutX="328.0" layoutY="266.0" promptText="Price" styleClass="input-field" />

      <!-- Buttons -->
      <Button layoutX="152.0" layoutY="341.0" onAction="#addBook" prefHeight="30.0" prefWidth="116.0" styleClass="action-button" text="Add" />
      <Button layoutX="339.0" layoutY="341.0" onAction="#removeSelectedBook" prefHeight="30.0" prefWidth="116.0" styleClass="danger-button" text="Remove" />
      <Button layoutX="31.0" layoutY="22.0" mnemonicParsing="false" onAction="#switchToOwnerView" text="Back" />
      <Label fx:id="bookLabel" layoutX="220.0" layoutY="313.0" text="Label" textFill="#d32f2f" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>

   </children>
</AnchorPane>
